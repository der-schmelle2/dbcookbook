<?xml version="1.0"?>
<style>/* Font definitions */
body, 
div.abstract
{
  font-family:'Maven Pro';
}

p
{
  font-family: 'PT Serif';
}

div.abstract p
{
  font-family:'Maven Pro';
}

/* Verbatim texts */
div.programlisting, div.screen,
.command,
.option,
.filename,
.function,
code, 
a.link
{
  font-family:'Cousine',monospace;
}

/* ================== */
body
{
  margin-left:2em;
  margin-right:2em;  
}

div.book div.titlepage
{
  text-align: center;
}
div.book div.titlepage .title
{
  /* font-family:'Maven Pro'; */
  font-weight:900;
  font-size:500%;
  margin-bottom:12pt;
  text-shadow:4px 4px 5px rgba(0,0,0,0.15);
}
div.book div.titlepage .subtitle:before
{
  content:"\2767";
  display:block;
  text-align:center;
  height:1.5em;
  font-size:2.5em;
}
div.book div.titlepage div.legalnotice
{
 text-align:left;
}
div.book div.titlepage div.legalnotice div.sidebar
{
  font-family: 'PT Serif';
  text-align:left;
  font-size:smaller;
  margin-top:3em;
  margin-bottom:3em;
  margin-left:10%;
  margin-right:10%;
  padding:1em;
  border:2pt solid black;
  background-color:#FFFDB7;
  -moz-border-radius:.5em;
  -moz-box-shadow:3px 3px 10px rgba(0,0,0,0.2);
  -webkit-border-radius:1em;
  -webkit-box-shadow:3px 3px 10px rgba(0,0,0,0.2);
}
div.book div.titlepage div.legalnotice div.informaltable table,
div.book div.titlepage div.legalnotice div.informaltable tr,
div.book div.titlepage div.legalnotice div.informaltable td
{
  border:none;
}
div.abstract
{
  margin-left:4em;
  margin-right:4em;
}
div.abstract-title, 
div.toc-title
{
  font-weight:bold;
  padding-bottom:0em;
  margin-bottom:-.5em;
}
div.chapter div.titlepage,
div.preface div.titlepage
{
  text-align:left;
}
div.appendix div.titlepage h2.title,
div.chapter div.titlepage h2.title,
div.preface div.titlepage h2.title
{
  text-rendering: optimizeLegibility;
  color:#369;/* navy */
  text-align:left;
  font-size:280%;
}

h2.title .section-prev
{
  margin-left:1em;
}

h2.title .section-prev, h2.title .section-next
{
  font-size:small;
}


div.appendix div.section div.titlepage .title,
div.chapter div.section div.titlepage .title,
div.preface div.section div.titlepage .title
{
  border-top:1pt dotted gray;
  border-left:none;
  padding-top:0.4em;
  padding-left:0pt;
  text-align:left;
  font-size: 180%;
  margin-bottom:-.5em;
  text-shadow:2px 2px 4px rgba(0,0,0,0.15);
}
div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 160%;
}
div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 140%;
}

div.section div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 120%;
}
/* Author and authorgroup */
div.section div.titlepage div.authorgroup,
div.section div.titlepage div.othercredit,
{
  margin-top:1.5em;
  font-weight:normal;
  font-size:small;
}
div.section div.titlepage div.authorgroup div.author .author,
div.section div.titlepage div.othercredit .othercredit,
{
  margin-top:0pt;
  margin-bottom:0pt;
}
div.section div.titlepage div.authorgroup:before,
div.section div.titlepage div.othercredit:before,
{
  content:"Credits: ";
}

/* Tocs */
div.book div.toc div.toc-title,
div.book div.list-of-tables div.toc-title,
div.book div.list-of-figures div.toc-title,
div.book div.list-of-procedures div.toc-title,
div.book div.list-of-examples div.toc-title
{
  font-size:large;
}

/* TOC */
div.book > div.toc > dl > dt
{
  margin-top:1em;
  font-weight:bold;
  font-size:larger;
}

div.book > div.toc > dl > dd
{
  font-family: 'PT Serif';
  font-weight:normal;
}

.procedure li
{
  font-weight:bold;
}

.procedure li > *
{
  font-weight:normal;
}

/* formal */
div.procedure-title {
  font-weight: bold;
  margin-bottom:-.5em;
}

/* Header and Footer */
div.navheader
{
  position: absolute;
  top:0em;
  left:0em;
  height:100%;
  width:20em;
  border:4px solid silver;
  padding:0;
  background-color:silver;
  color:#333;
  /* */
  font-size:0.7em;
  font-weight:bold;
  border-right:4px solid #666;
}
html>body div.navheader,
html>body div.breadcrumbs
{
  position: fixed;
}

div.navheader ul
{
  list-style:none;
  margin:0;
  padding:0;
}
div.navheader ul li
{
  margin:0pt;
  border-top:1px solid #003;
}
div.navheader ul li a
{
  display:block;
  padding:2px 2px 2px 0.5em;
  border-left:10px solid #369;
  /*border-right:1px solid #69c;*/
  /*border-bottom:1px solid #369;*/
  background-color:#036;
  color:#fff;
  text-decoration:none;
  width:100%;
}
html>body div.navheader ul li a
{
  width:auto;
}

div.breadcrumbs
{
  position: absolute;
  top:0em;
  left:17em;
  width:100%;
  /*margin-top:.5em;*/
  margin-left:.5em;
  padding:6pt;
  background-color:#036;
  color:#fff;
}

div.breadcrumbs a
{
  background-color:#036;
  color:#fff;
  padding-left:2pt;
  padding-right:2pt;
  text-decoration:none;
}

div.breadcrumbs a:hover
{
  background-color:#69f;
  color:#fff;
  padding-left:2pt;
  padding-right:2pt;
  border-bottom:6pt solid #69f;
  border-top:6pt solid #69f;
}

div.navheader ul li a:hover
{
  border-left:10px solid #036;
  border-right:1px solid #69c;
  border-bottom:1px solid #369;
  background-color:#69f;
  color:#fff;
}

div.navheader ul li a > span
{
  font-weight:bold;
  font-size:medium;
}

div.navheader + div
{
  margin-left: 14em;
  margin-top:5em;
  /*padding-left:1.5em;*/
  /*background-color:#ffffe0;*/
}

div.navfooter hr,
div.navheader hr
{
  border-bottom: 1px solid lightgray;
}

div.navfooter,
div.navheader table tr td,
div.breadcrumbs
{
  font-size:small; 
}

div.navfooter
{
  display:none;
}

/* orderedlist with inheritnum="inherit" */
div.orderedlist > table.orderedlist > tbody > tr > td
{
  vertical-align:text-top;
}</style>
