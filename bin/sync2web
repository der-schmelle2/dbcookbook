#!/bin/bash
#
# Synchronize the main entry Web page on http://doccookbook.sf.net/


usage () {
  cat << EOF
${0##*/} [USER]

Purpose:
  Synchronize the main entry Web page on http://doccookbook.sf.net/

Parameters:
 USER = user name/account on SourceForge

EOF
}


USER=${1:-tom_schr}
PROJECT=doccookbook
SFSITE=web.sourceforge.net
WEBPATH="/home/project-web/${PROJECT}/htdocs/"
#TOSYNC="web/index.html web/site.css web/favicon.ico web/feed-icon-*.png web/img web/bg-gradient.* web/ie-background.jpg"
TOSYNC="web/bs web/fa web/*.css web/*.html web/*.ico web/*.png web/*.jpg"

if [[ $1 = "-h" || $1 = "--help" ]]; then
  usage
  exit 1
fi

rsync -aiv --exclude '*~' --exclude '*.orig' ${TOSYNC} ${USER},${PROJECT}@${SFSITE}:${WEBPATH}

