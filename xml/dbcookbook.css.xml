<?xml version="1.0"?>
<style>/* Font definitions */
body, 
div.abstract
{
  font-family:'Maven Pro';
}

p
{
  font-family: 'PT Serif';
}

div.abstract p
{
  font-family:'Maven Pro';
}

/* Verbatim texts */
div.programlisting, div.screen,
.command,
.option,
.filename,
.function,
code, 
a.link
{
  font-family:'Cousine';
}

/* ================== */
body
{
  margin-left:2em;
  margin-right:2em;  
}

div.book div.titlepage
{
  text-align: center;
}
div.book div.titlepage .title
{
  /* font-family:'Maven Pro'; */
  font-weight:900;
  font-size:500%;
  margin-bottom:12pt;
  text-shadow:4px 4px 5px rgba(0,0,0,0.15);
}
div.book div.titlepage .subtitle:before
{
  content:"\2767";
  position:relative;
  left:25%;
  top:-.5em;
  text-align:center;
  height:2em;
  font-size:2.5em;
}
div.book div.titlepage div.legalnotice
{
  font-family: 'PT Serif';
  text-align:left;
  /*font-size:smaller;*/
  margin-top:3em;
  margin-bottom:3em;
  margin-left:10%;
  margin-right:10%;
  padding:1em;
  border:2pt solid black;
  background-color:#FFFDB7;
  -moz-border-radius:.5em;
  -moz-box-shadow:3px 3px 10px rgba(0,0,0,0.2);
  -webkit-border-radius:1em;
  -webkit-box-shadow:3px 3px 10px rgba(0,0,0,0.2);
}
div.book div.titlepage div.legalnotice div.informaltable table,
div.book div.titlepage div.legalnotice div.informaltable tr,
div.book div.titlepage div.legalnotice div.informaltable td
{
  border:none;
}
div.abstract
{
  margin-left:4em;
  margin-right:4em;
}
div.abstract-title, 
div.toc-title
{
  font-weight:bold;
  padding-bottom:0em;
  margin-bottom:-.5em;
}
div.chapter div.titlepage,
div.preface div.titlepage
{
  text-align:left;
}
div.appendix div.titlepage h2.title,
div.chapter div.titlepage h2.title,
div.preface div.titlepage h2.title
{
  text-rendering: optimizeLegibility;
  border-left: 5pt solid black;
  color:navy;
  padding-left:0.25em;
  text-align:left;
  font-size:280%;
}

div.appendix div.section div.titlepage .title,
div.chapter div.section div.titlepage .title,
div.preface div.section div.titlepage .title
{
  border-top:1pt dotted gray;
  border-left:none;
  padding-top:0.4em;
  padding-left:0pt;
  text-align:left;
  font-size: 180%;
  margin-bottom:-.5em;
  text-shadow:2px 2px 4px rgba(0,0,0,0.15);
}
div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 160%;
}
div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 140%;
}

div.section div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 120%;
}
/* Author and authorgroup */
div.section div.titlepage div.author .author
{
  font-weight:normal;
}
div.section div.titlepage div.authorgroup
{
  margin-top:1.5em;
  font-family:'Maven Pro';
  font-weight:normal;
}
div.section div.titlepage div.authorgroup
{
  margin-top:1.5em;
  font-family:'Maven Pro';
  font-weight:normal;
}
div.section div.titlepage div.authorgroup div.author .author,
div.section div.titlepage div.authorgroup div.author
{
    margin-top:0;
    margin-bottom:0;
}
div.section div.titlepage div.authorgroup:before
{
  content:"Credits: ";
}
/* Tocs */
div.book div.toc div.toc-title,
div.book div.list-of-examples div.toc-title
{
  font-size:large;
}

/* TOC */
div.book > div.toc > dl > dt
{
  margin-top:1em;
  font-weight:bold;
  font-size:larger;
}

div.book > div.toc > dl > dd
{
  font-family: 'PT Serif';
  font-weight:normal;
}

.procedure li
{
  font-weight:bold;
}

.procedure li > *
{
  font-weight:normal;
}

/* formal */
div.procedure-title {
  font-weight: bold;
  margin-bottom:-.5em;
}

div.navheader
{
  top: 0;
  left:0em;
  right:0em;
  min-height:3em;
  padding-top:1em;
  margin-bottom:1em;
  position: fixed;
  background-color:white;
  margin-left:2em;
  margin-right:2em;
}

div.navheader + div
{
  margin-top:7em;
}

div.navfooter hr,
div.navheader hr
{
  border-bottom: 1px solid lightgray;
}

div.navfooter,
div.navheader table tr td
{
  font-size:small; 
}</style>
