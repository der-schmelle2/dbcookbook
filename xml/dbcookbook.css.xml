<?xml version="1.0"?>
<style>/* Font definitions */
body, 
div.abstract
{
  font-family:'Maven Pro';
}

p
{
  font-family: 'PT Serif';
}

div.abstract p
{
  font-family:'Maven Pro';
}

/* Verbatim texts */
div.programlisting, div.screen,
.command,
.option,
.filename,
.function,
code, 
a.link
{
  font-family:'Cousine';
}

/* ================== */
body
{
  margin-left:2em;
  margin-right:2em;  
}

div.book div.titlepage
{
  text-align: center;
}
div.book div.titlepage .title
{
  /* font-family:'Maven Pro'; */
  font-weight:900;
  font-size:350%;
  margin-bottom:12pt;
}

div.book div.titlepage div.legalnotice
{
  font-family: 'PT Serif';
  text-align:left;
  /*font-size:smaller;*/
  margin-top:3em;
  margin-bottom:3em;
  margin-left:10%;
  margin-right:10%;
  padding:1em;
  border:2pt solid black;
  background-color:#FFFDB7;
}
div.abstract
{
  margin-left:4em;
  margin-right:4em;
}
div.abstract-title, 
div.toc-title
{
  font-weight:bold;
  padding-bottom:0em;
  margin-bottom:-.5em;
}
div.chapter div.titlepage,
div.preface div.titlepage
{
  text-align:left;
}
div.appendix div.titlepage h2.title,
div.chapter div.titlepage h2.title,
div.preface div.titlepage h2.title
{
  text-rendering: optimizeLegibility;
  border-left: 5pt solid black;
  color:navy;
  padding-left:0.25em;
  text-align:left;
  font-size:220%;
}

div.appendix div.section div.titlepage .title,
div.chapter div.section div.titlepage .title,
div.preface div.section div.titlepage .title
{
  border-top:1pt dotted gray;
  border-left:none;
  padding-top:0.4em;
  padding-left:0pt;
  text-align:left;
  font-size: 180%;
  margin-bottom:-.5em;
}
div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 160%;
}
div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 140%;
}

div.section div.section div.section div.titlepage .title
{
  border:none;
  text-align:left;
  font-size: 120%;
}

div.book div.toc div.toc-title,
div.book div.list-of-examples div.toc-title
{
  font-size:large;
}

/* TOC */
div.book > div.toc > dl > dt
{
  margin-top:1em;
  font-weight:bold;
  font-size:larger;
}

div.book > div.toc > dl > dd
{
  font-family: 'PT Serif';
  font-weight:normal;
}

.procedure li
{
  font-weight:bold;
}

.procedure li > *
{
  font-weight:normal;
}

/* formal */
div.procedure-title {
  font-weight: bold;
  margin-bottom:-.5em;
}</style>
